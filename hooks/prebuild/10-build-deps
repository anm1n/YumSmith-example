#!/bin/bash
set -euo pipefail

# Install build dependency based on SPEC file
# NOTE Requires all macros in the SPEC file to be parsable

usage() {
    echo "ğŸ“– Usage: $0 -s <SPEC file path>"
    exit 1
}

# ğŸ” Check if dnf exists
if ! command -v dnf >/dev/null 2>&1; then
    echo "âŒ Error: 'dnf' command not found. Please install dnf first."
    exit 2
fi

SPEC_FILE=""

# âš™ï¸ Parse command-line options
while getopts ":s:" opt; do
    case "$opt" in
        s)
            SPEC_FILE="$OPTARG"
            ;;
        \?)
            echo "âŒ Error: Invalid option -$OPTARG"
            usage
            ;;
        :)
            echo "âŒ Error: Option -$OPTARG requires an argument"
            usage
            ;;
    esac
done

# ğŸ“ Check if -s was provided
if [[ -z "$SPEC_FILE" ]]; then
    echo "âŒ Error: You must specify a SPEC file with -s"
    usage
fi

# ğŸ“‚ Check if the SPEC file exists
if [[ ! -f "$SPEC_FILE" ]]; then
    echo "âŒ Error: SPEC file not found: $SPEC_FILE"
    exit 3
fi

# Query build deps
BUILD_DEPS=$(rpmspec -q --buildrequires "$SPEC_FILE" | sort -u | grep -v '^\s*$' || true)

if [[ -z "$BUILD_DEPS" ]]; then
    echo "âœ… No build dependency is required"
    exit 0
fi


echo "âš™ï¸ $SPEC_FILE requires the following build dependencies"
echo "$BUILD_DEPS"
echo

if command -v dnf >/dev/null 2>&1; then
    echo "âš™ï¸ Using dnf..."
    dnf builddep -y "$SPEC_FILE"
elif command -v zypper >/dev/null 2>&1; then
    echo "âš™ï¸ Using zypper..."
    zypper --non-interactive install $BUILD_DEPS
else
    echo "âŒ Error: Neither dnf or zypper is present in PATH"
    exit 1
fi

echo "âœ… Build dependencies for $SPEC_FILE installed successfully!"
